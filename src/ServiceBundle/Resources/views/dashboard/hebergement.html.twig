{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Table</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="{{path('main_dashboard')}}">Home</a></li>
                        <li><i class="fa fa-table"></i>Table</li>
                        <li><i class="fa fa-th-list"></i>Basic Table</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Advanced Table
                            <br><br>
                            <div class="btn-group">
                                <a class="btn btn-default" href="#"><span class="icon_plus_alt"></span></a>
                            </div>
                            <br><br>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> Identifiant</th>
                                <th><i class="icon_calendar"></i> type</th>
                                <th><i class="icon_mail_alt"></i> prix par jour</th>
                                <th><i class="icon_pin_alt"></i> disponibilit√©</th>
                                <th><i class="icon_mobile"></i> image</th>
                                <th><i class="icon_mobile"></i> Adress</th>
                                <th><i class="icon_mobile"></i> Nb chambre</th>
                                <th><i class="icon_mobile"></i> nb lits</th>
                                <th><i class="icon_mobile"></i> capacite</th>
                                <th><i class="icon_mobile"></i> description</th>
                                <th><i class="icon_cogs"></i> Action</th>
                            </tr>
                            {% for h in hebergements %}
                                <tr>
                                    <td>{{ h.id }}</td>
                                    <td>{{ h.type }}</td>
                                    <td>{{ h.prixParJour }}</td>
                                    <td>{{ h.disponibilite }}</td>
                                    <td>{{ h.image }}</td>
                                    <td>{{ h.adresse }}</td>
                                    <td>{{ h.nbChambre }}</td>
                                    <td>{{ h.nbLits }}</td>
                                    <td>{{ h.capacite }}</td>
                                    <td>{{ h.description }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="#"><i class="icon_pencil-edit_alt"></i></a>
                                            <a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
{% endblock %}

